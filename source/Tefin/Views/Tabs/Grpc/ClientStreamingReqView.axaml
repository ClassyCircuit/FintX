<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:explorer="clr-namespace:Tefin.ViewModels.Explorer"
             xmlns:viewModels="clr-namespace:Tefin.ViewModels"
             xmlns:grpc="clr-namespace:Tefin.ViewModels.Tabs.Grpc"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="grpc:ClientStreamingReqViewModel"
             x:Class="Tefin.Views.Tabs.Grpc.ClientStreamingReqView">

    <Border>
        <Grid RowDefinitions="*, Auto, *">
            <Grid Grid.Row="0">
                <TreeDataGrid Source="{Binding MethodTree}" ShowColumnHeaders="False" x:Name="TreeDg"
                              VerticalAlignment="Stretch">
                    <TreeDataGrid.Resources>
                        <DataTemplate x:Key="CellTemplate" x:DataType="explorer:IExplorerItem">
                            <ContentControl Content="{Binding}" Margin="4 0 0 0">
                                <ContentControl.DataTemplates>
                                    <viewModels:NodeViewLocator /> <!-- will load *NodeView.axaml -->
                                </ContentControl.DataTemplates>
                                <!-- <ContentControl.ContextFlyout> -->
                                <!--     <Flyout> -->
                                <!--         <TextBlock Text="sdf"></TextBlock> -->
                                <!--     </Flyout> -->
                                <!-- </ContentControl.ContextFlyout> -->
                            </ContentControl>
                        </DataTemplate>
                        <DataTemplate x:Key="CellEditTemplate" x:DataType="explorer:IExplorerItem">
                            <ContentControl Content="{Binding}" Margin="4 0 0 0">
                                <ContentControl.DataTemplates>
                                    <viewModels:NodeEditViewLocator /> <!-- will load *NodeEditView.axaml -->
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                    </TreeDataGrid.Resources>
                </TreeDataGrid>
                <TextBlock Text="request" FontSize="20" Opacity="0.15"
                           IsHitTestVisible="False"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           Margin="10" />
            </Grid>
            <GridSplitter CornerRadius="1" Grid.Row="1" Height="8" Background="{StaticResource Bym.Color.DefaultWindowBackground}" />
            <Grid Grid.Row="2" RowDefinitions="Auto, *">
                <Border Grid.Row="0" BorderThickness="2 0 2 2" BorderBrush="{StaticResource Bym.Color.DefaultWindowBackground}" 
                        CornerRadius="0 0 8 8">
                    <StackPanel Orientation="Horizontal" Margin="6">
                        <Button Command="{Binding WriteCommand}" Classes="MenuButton" ToolTip.Tip="Write to the request stream">
                            <TextBlock Text="Write"></TextBlock>
                        </Button>
                        <Button Command="{Binding EndWriteCommand}" Classes="MenuButton" ToolTip.Tip="Finish writing to the request stream">
                            <TextBlock Text="End write"></TextBlock>
                        </Button>
                    </StackPanel>
                </Border>
                <TreeDataGrid Source="{Binding StreamTree}" ShowColumnHeaders="False" x:Name="TreeDgStream"
                              Grid.Row="1"
                              VerticalAlignment="Stretch">
                    <TreeDataGrid.Resources>
                        <DataTemplate x:Key="CellTemplate" x:DataType="explorer:IExplorerItem">
                            <ContentControl Content="{Binding}" Margin="4 0 0 0">
                                <ContentControl.DataTemplates>
                                    <viewModels:NodeViewLocator /> <!-- will load *NodeView.axaml -->
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                        <DataTemplate x:Key="CellEditTemplate" x:DataType="explorer:IExplorerItem">
                            <ContentControl Content="{Binding}" Margin="4 0 0 0">
                                <ContentControl.DataTemplates>
                                    <viewModels:NodeEditViewLocator /> <!-- will load *NodeEditView.axaml -->
                                </ContentControl.DataTemplates>
                            </ContentControl>
                        </DataTemplate>
                    </TreeDataGrid.Resources>
                </TreeDataGrid>
                <TextBlock Text="Unable to write to the stream" FontSize="16"   Grid.Row="0" Grid.RowSpan="2"
                           IsVisible="{Binding !CanWrite}"
                           IsHitTestVisible="False"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="10" />
                
                <TextBlock Text="client stream" FontSize="20" Opacity="0.15" Grid.Row="0" Grid.RowSpan="2"
                           IsHitTestVisible="False"
                           VerticalAlignment="Bottom" HorizontalAlignment="Right"
                           Margin="10" />
            </Grid>
        </Grid>
    </Border>
</UserControl>